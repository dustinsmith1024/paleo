<form action="/search" class="" id="search-form" method="get" data-remote="true">
  <div id="welcome-message">
    <h2>We only do Paleo recipes.</h2><h3> No blogs, no science, no jargon, just good healthy food.</h3>
  </div>
  
  <label for="search" id="search-box" class="big">What ingredients are you looking for?</label><br/>
  <input id="search" name="search" size="30" type="text" value="<%= params[:search] || ""  %>"/>

  <input id="search_submit" name="commit" type="submit" value="Search!" />
</form>

<br/><br/>

</br>
<br/>
<div id="recipes" >
  <% if @recipes && params[:search] %>

    <div id="results" class="results">
      Found: <%= @recipes.count %>
      <% if @recipes.count > 1 %>
        recipes.
      <% elsif @recipes.count == 0 %>
        recipes. Sorry try another search term?
      <% elsif @recipes.count == 1 %>
        recipe.
      <% end %>
    </div>
    <br/><br/>
    <div id="list">
    <% @recipes.each_with_index do |r, index| %>
      <%= index + 1 %>. <b><%= link_to r.name, recipe_path(r) %></b>: <%= truncate(r.instructions, :length => 15) %><br/>
    <% end %>
    </div>
  <% else %>
   
  <% end %>
</div>
